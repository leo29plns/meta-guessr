{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,

		"strict": true,
		"noImplicitAny": true,

		"target": "es2023",
		"moduleResolution": "Bundler",

		"baseUrl": ".",
		"paths": {
			"@/*": ["public/*"]
		},

		"skipLibCheck": true
	},
	"include": ["**/*.js"],
	"exclude": ["node_modules", "public/libraries"]
}
