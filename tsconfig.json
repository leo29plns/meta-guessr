{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,

    "strict": true,
    "noImplicitAny": true,

    "target": "es2023",
    "module": "esnext",
    "moduleResolution": "Bundler",

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/public/*"]
    },

    "skipLibCheck": true
  },
  "include": ["**/*.js", "**/*.d.ts"],
  "exclude": ["node_modules", "src/public/libraries", "src/tests"]
}
